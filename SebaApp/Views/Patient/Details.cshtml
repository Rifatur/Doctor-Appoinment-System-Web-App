@model SebaApp.Models.Patient

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/tailwinCss.css" rel="stylesheet" />


<h1>Details</h1>


<div class="container mx-auto my-5 p-5">
    <div class="md:flex no-wrap md:-mx-2 ">
        <!-- Left Side -->
        <div class="w-full md:w-3/12 md:mx-2">
            <!-- Profile Card -->
            <div class="bg-white p-3 border-t-4 border-green-400">
                @*<div class="image overflow-hidden">
                <img class="h-auto w-full mx-auto"
                     src="https://lavinephotography.com.au/wp-content/uploads/2017/01/PROFILE-Photography-112.jpg"
                     alt="">
            </div>*@
                <h1 class="text-gray-900 font-bold text-xl leading-8 my-1">@Model.FirstName @Model.LastName</h1>
                <h3 class="text-gray-600 font-lg text-semibold leading-6">Balance : 0:00 ৳</h3>
                <p class="text-sm text-gray-500 hover:text-gray-600 leading-6">

                </p>
                <ul class="bg-gray-100 text-gray-600 hover:text-gray-700 hover:shadow py-2 px-3 mt-3 divide-y rounded shadow-sm">
                    <li class="flex items-center py-3">
                        <span>Status</span>
                        <span class="ml-auto">
                            <span class="bg-green-500 py-1 px-2 rounded text-white text-sm">Active</span>
                        </span>
                    </li>
                    <li class="flex items-center py-3">
                        <span>Member since</span>
                        <span class="ml-auto">Nov 07, 2016</span>
                    </li>
                </ul>
            </div>
            <!-- End of profile card -->
            <div class="my-4"></div>

            <!-- End of friends card -->
            <div>
                <a class="btn btn-sm btn-outline-primary w-100 mb-2" asp-action="Edit" asp-route-id="@Model.PatienID">Edit</a>
                <a class="btn btn-sm btn-warning w-100" asp-action="Index">Back to List</a>
            </div>
        </div>
        <!-- Right Side -->
        <div class="w-full md:w-9/12 mx-2 ">
            <!-- Profile tab -->
            <!-- About Section -->
            <div class="bg-white p-3 shadow-sm rounded-sm">
                <div class="flex items-center space-x-2 font-semibold text-gray-900 leading-8">
                    <span clas="text-green-500">
                        <svg class="h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </span>
                    <span class="tracking-wide">About</span>
                </div>
                <div class="text-gray-700">
                    <div class="grid md:grid-cols-2 text-sm">
                        <div class="grid grid-cols-2">
                            <div class="px-4 py-2 font-semibold">First Name</div>
                            <div class="px-4 py-2">@Model.FirstName</div>
                        </div>
                        <div class="grid grid-cols-2">
                            <div class="px-4 py-2 font-semibold">Last Name</div>
                            <div class="px-4 py-2">@Model.LastName</div>
                        </div>
                        <div class="grid grid-cols-2">
                            <div class="px-4 py-2 font-semibold">Gender</div>
                            <div class="px-4 py-2">Female</div>
                        </div>
                        <div class="grid grid-cols-2">
                            <div class="px-4 py-2 font-semibold">Contact No.</div>
                            <div class="px-4 py-2">@Model.mobile</div>
                        </div>
                        <div class="grid grid-cols-2">
                            <div class="px-4 py-2 font-semibold">Current Address</div>
                            <div class="px-4 py-2"></div>
                        </div>
                        <div class="grid grid-cols-2">
                            <div class="px-4 py-2 font-semibold">Permanant Address</div>
                            <div class="px-4 py-2"></div>
                        </div>
                        <div class="grid grid-cols-2">
                            <div class="px-4 py-2 font-semibold">Email.</div>
                            <div class="px-4 py-2">
                                <a class="text-blue-800" href="">@Model.Email</a>
                            </div>
                        </div>
                        <div class="grid grid-cols-2">
                            <div class="px-4 py-2 font-semibold">Birthday</div>
                            <div class="px-4 py-2">Feb 06, 1998</div>
                        </div>
                    </div>
                </div>
                <button class="block w-full text-blue-800 text-sm font-semibold rounded-lg hover:bg-gray-100 focus:outline-none focus:shadow-outline focus:bg-gray-100 hover:shadow-xs p-3 my-4">
                    Show
                    Full Information
                </button>
            </div>
            <!-- End of about section -->

            <div class="my-4"></div>

            <!-- Experience and education -->
            <div class="bg-white p-3 shadow-sm rounded-sm">
                <h3 class="mx-2">Appointments</h3>
                <div class="grid grid-cols-1 mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Doctor Name</th>
                                            <th scope="col">Appointment Id</th>
                                            <th scope="col">Date</th>
                                            <th scope="col">Time</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    @if (ViewData["Appoinment"] == null)
                                    {

                                    }
                                    else
                                    {
                                        <tbody>
                                            @foreach (var apn in ViewData["Appoinment"] as IList<Appointment>)
                                            {
                                                <tr>
                                                    <th scope="row">1</th>
                                                    <td>@apn.Doctor.FirstName @apn.Doctor.LastName</td>
                                                    <td>@apn.appointID</td>
                                                    <td>@apn.AppoinmentDate</td>
                                                    <td>@apn.TimeSlot</td>
                                                    <td>
                                                        <button type="button" class="btn btn-primary"><i class="far fa-eye"></i></button>
                                                        <button type="button" class="btn btn-success"><i class="fas fa-edit"></i></button>
                                                        <button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                    <!--Appointment end-->

                </div>
                <!-- End of Experience and education grid -->
            </div>
            <!-- End of profile tab -->
        </div>
    </div>
</div>
<div class="bg-white container mx-auto p-3 shadow-sm rounded-sm">
    <h3 class="mx-2">Doctors Lists</h3>
    <div class=" grid grid-cols-4   gap-1">

        @foreach (var std in ViewData["doctors"] as IList<Doctor>)
        {
            <!-- for card -->
            <div class="row-span-1 col-span-1 ">
                <div class="card p-3  ">
                    <div class="d-flex align-items-center flex-row">
                        <div class="image"> <img src="https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80" class="rounded" width="155"> </div>
                        <div class="ml-3 ">
                            <h4 class="mb-0 mt-0">@std.FirstName @std.LastName</h4> <span>Doctor</span>
                            <div class="p-2 mt-2  bg-primary d-flex justify-content-between rounded text-white stats">
                                <div class="d-flex m-2 flex-column"> <span class="articles">Patient</span> <span class="number1">38</span> </div>
                                <div class="d-flex m-2 flex-column"> <span class="followers">Followers</span> <span class="number2">980</span> </div>
                                <div class="d-flex m-2 flex-column"> <span class="rating">Rating</span> <span class="number3">8.9</span> </div>
                            </div>
                            <div class="button mt-2 d-flex flex-row align-items-center">
                                <button class="btn btn-sm btn-outline-primary w-100">Chat</button>

                                @Html.ActionLink("Book", "Create", "Appointment", new { id = @std.doctorID, patient = @Model.PatienID }, new { @class = "btn btn-sm btn-primary w-100 ml-2" })

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- for card end-->
        }
    </div>
</div>



